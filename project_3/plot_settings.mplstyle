# plot_settings.mplstyle

# Lines and markers
lines.linewidth: 2.0
lines.markersize: 6
lines.markeredgewidth: 1

# Font settings
font.size: 12
# setting font to cambria math 
font.family: STIXGeneral
font.serif: stix

# Axes
axes.titlesize: 28      
axes.labelsize: 20    
xtick.labelsize: 20
ytick.labelsize: 20
axes.grid: True         
axes.grid.axis: both
axes.grid.which: major

# Grid line settings 
grid.linewidth: 0.5
grid.color: lightgray

# Legend
legend.fontsize: 25